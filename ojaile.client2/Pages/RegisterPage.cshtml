@page
@model ojaile.client2.Pages.RegisterPageModel
@{

    <h2>@ViewData["RegisteredName"]</h2>
    <div class="row col-12">
    <div class="col-6">
    <table>
    <thead>
    <th>Fullname</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Created</th>
    </thead> 
    
    <tbody>
                    @foreach(var itm in Model.Users())
                    {
                        <tr>
                        <td>@itm.FirstName @itm.LastName</td>
                        <td>@itm.Email</td>
                         <td>@itm.PhoneNumber</td>
                          <td>@itm.Created.ToString("dd mm yyy")</td>
                        </tr>
                    }
    
    </tbody>

    </table>
    </div>
    <div class="col-6">








    <form class="horizontal-form" asp-action="post">

        <div class="form-group">
            <label>First Name</label>
            <input type="text" required asp-for="register.FirstName" class="form-control" />
            <span asp-validation-for="register.FirstName"></span>
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input type="text" required asp-for="register.LastName" class="form-control" />
            <span asp-validation-for="register.LastName"></span>
        </div>
        <div class="form-group">
            <label>Username</label>
            <input type="text" required asp-for="register.UserName" class="form-control" />
            <span asp-validation-for="register.UserName"></span>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" required asp-for="register.Email" class="form-control" />
            <span asp-validation-for="register.Email"></span>
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            <input type="text" required asp-for="register.phoneNumber" class="form-control" />
            <span asp-validation-for="register.phoneNumber"></span>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" required asp-for="register.Password" class="form-control" />
            <span asp-validation-for="register.Password"></span>
        </div>
      
        <hr />
        <div class="form-group">
            <input type="submit" value="Submit Data" />
        </div>
    </form>

     </div></div>
   
    <partial name="_ValidationScriptsPartial" />
}
